@model Ch02Quotation.Models.PriceQuotation

@{
    ViewData["Title"] = "Calculate";
}
<link href="~/Calculator.css" rel="stylesheet" />

<h1>Price Quotation</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Calculate", "PriceQuotation", FormMethod.Post, new { id = "formID" }))
        {

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-2">
                    <label asp-for="SubTotal" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.SubTotal, new { @class = "form-control", @id = "SubTotal" })
                    <span asp-validation-for="SubTotal" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="DiscountPercent" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.DiscountPercent, new { @class = "form-control", @id = "DiscountPercent" })
                    <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="DiscountAmount" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <div id="DiscAmount"><span>$ </span>@Html.DisplayFor(m => m.DiscountAmount)</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Total" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <div id="Total"><span>$ </span>@Html.DisplayFor(m => m.Total)</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" value="Calculate" class="btn btn-default" />
                    <button type="button" class="btn btn-info" onclick="resetForm();">Clear</button>
                </div>
            </div>
        }
    </div>
</div>



@section Scripts
    {
    <script>
        function resetForm() {
            $('#SubTotal').val('');
            $('#DiscountPercent').val('');
            $('#DiscAmount').html('<span>$</span>  0');
            $('#Total').html('<span>$</span>  0');
        }
    </script>
}
